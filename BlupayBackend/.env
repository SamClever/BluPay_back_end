# .env
# MDES sandbox vs prod toggle
MDES_ENV=sandbox

# OAuth1 consumer key (also called “token requestor ID”)
MDES_CONSUMER_KEY=abcdef1234567890

# Path & password for your sandbox client cert
MDES_CLIENT_CERT_PATH=/full/path/to/secrets/sandbox_client_cert.p12
MDES_CLIENT_CERT_PASSWORD=YourCertPassword

# Path to your RSA private key (if separate)
MDES_RSA_PRIVATE_KEY=/full/path/to/secrets/sandbox_rsa_key.pem

# Mastercard’s public key to wrap AES keys
MDES_MC_PUBLIC_KEY=/full/path/to/secrets/mastercard_sandbox_pub.pem

# Your 11-digit sandbox Token Requestor ID (usually same as CONSUMER_KEY)
MDES_TOKEN_REQUESTOR_ID=98765432101
